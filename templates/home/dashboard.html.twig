{% extends 'base.html.twig' %}
        {% block body %}
        
<div>
<div class="wrapper"> 
  <!-- Sidebar  -->
  <nav class="sidebar">
    <button class="btn close-btn sidebarCollapse"><i class="fas fa-times"></i></button>
    <div class="sidebar-header text-center"> <img src="images/logo.svg" alt=""> </div>
    <ul class="list-unstyled components">
      <li class="active"><a href="dashboard">My Dashboard</a></li>
      <li> <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Job search</a>
        <ul class="collapse list-unstyled " id="pageSubmenu">
          <li> <a href="/jobsitestosearch">Job Sites to Search</a> </li>
          <li><a href="/savedappliedjobs">Saved/Applied Jobs</a></li>
          <li><a href="/joblisting">Job Listing</a></li>
          <li><a href="/savedsearches">Saved Searches</a></li>
        </ul>
      </li>
      <li ><a href="/documents">My documents</a></li>
      <li><a href="/mytask">My Tasks</a></li>
      <li>
                        <a href="/logout">LogOut</a>
                    </li>
    </ul>
  </nav>
  
  <!-- Page Content  -->
  <div class="content">
    <nav class="dashboard-nav navbar-expand-lg">
      <div class="container-fluid">
        <div class="d-flex align-items-center">
          <button class="btn btn-info sidebarCollapse"><i class="fas fa-bars"></i></button>
          <ul class="sidetop ml-auto">
            <li class="active"> <a href="#">HELP</a> </li>
            <li> <a href="/accountinfo">SETTINGS</a> </li>
            <li>
                                    <a  href="#" id="navbardrop"><img alt="" src="images/avatar.png">

                                    </a>
                        
                                </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="over-wrapper">
      <div class="container-fluid">
        <ul class="dashboard-review">
          <li>
            <div class="c1">
              <div class="counter"> 26 </div>
              <span class="img-dots"> <img src="images/dots.svg" alt=""> </span> </div>
            <h3>Saved Jobs</h3>
          </li>
          <li>
            <div class="c1">
              <div class="counter"> 22 </div>
              <span class="img-dots"> <img src="images/dots.svg" alt=""> </span> </div>
            <h3>Applied</h3>
          </li>
          <li>
            <div class="c1">
              <div class="counter"> 15 </div>
              <span class="img-dots"> <img src="images/dots.svg" alt=""> </span> </div>
            <h3>Follow-up</h3>
          </li>
          <li>
            <div class="c1">
              <div class="counter"> 9 </div>
              <span class="img-dots"> <img src="images/dots.svg" alt=""> </span> </div>
            <h3>Interviews</h3>
          </li>
          <li>
            <div class="c1">
              <div class="counter"> 7 </div>
              <span class="img-dots"> <img src="images/dots.svg" alt=""> </span> </div>
            <h3>Follow-up</h3>
          </li>
        </ul>
      </div>



      
      <!--Card Dashboard-->
      <div class="container-fluid">
        <div class="jb-main">
          <div class=" fl1">
            <div class="card-main card1">
              <div class="card_title">
                <h3>Saved/Applied Jobs</h3>
              </div>
              <div class="content-card row no-gutters">
                <div class="col-4">
                  <h4> Title</h4>
                </div>
                <div class="col-4">
                  <h4>Company</h4>
                </div>
                <div class="col-4">
                  <h4>Saved/Applied</h4>
                </div>
              </div>
              <div class="row no-gutters c-shadow">
                {% for job in jobs| slice(0,1) %}
                <div class="col-4">
                  <p class="title-txt"> {{ job.title }}</p>
                </div>
                <div class="col-4">
                  <p class="c-name">{{ job.comapnyName}}</p>
                </div>
                <div class="col-4">
                  <p class="s-date"> {{ job.dateSaved|date('d-m-Y') }} <img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
                {% endfor %}
              </div>
              <div class="row no-gutters c-shadow">
                {% for job in jobs| slice(1,1) %}
                <div class="col-4">
                  <p class="title-txt"> {{ job.title }}</p>
                </div>
                <div class="col-4">
                  <p class="c-name"> {{ job.comapnyName}}</p>
                </div>
                <div class="col-4">
                  <p class="s-date"> {{ job.dateSaved|date('d-m-Y') }} <img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
                {% endfor %}
              </div>
              <div class="row no-gutters c-shadow">
                {% for job in jobs| slice(2,1) %}
                <div class="col-4">
                  <p class="title-txt"> {{ job.title }}</p>
                </div>
                <div class="col-4">
                  <p class="c-name">{{ job.comapnyName}}</p>
                </div>
                <div class="col-4">
                  <p class="s-date">{{ job.dateSaved|date('d-m-Y') }} <img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
                {% endfor %}
              </div>
              <div class="text-center mt-41"> <a href="/savedappliedjobs" class="btn-Links ">View all <img src="images/arrow-down.svg" alt=""></a> </div>
              <div class="text-right"> <a href="/savedappliedjobs" class="plus-more"><img src="images/plus.svg" alt=""></a> </div>
            </div>
          </div>
          <div class=" fl2">
            <div class="card2 card-main">
              <div class="card_title">
                <h3>Reminders</h3>
              </div>
              <div class="content-card row no-gutters">
                <div class="col-4">
                  <h4><img src="images/task.svg" alt=""> Task</h4>
                </div>
                <div class="col-4">
                  <h4><img src="images/portfolio.svg" alt=""> Job</h4>
                </div>
                <div class="col-4">
                  <h4><img src="images/deadline.svg" alt=""> Due date</h4>
                </div>
              </div>
              <div class="row no-gutters c-shadow">
                <div class="col-4">
                  <p class="title-txt">Thank you letter</p>
                </div>
                <div class="col-4">
                  <p class="c-name"><span class="elipse"></span> Merryl Lynch</p>
                </div>
                <div class="col-4">
                  <p class="s-date"><span class="elipse"></span>Wed, May 2 <img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
              </div>
              <div class="row no-gutters c-shadow">
                <div class="col-4">
                  <p class="title-txt"> Application F/U</p>
                </div>
                <div class="col-4">
                  <p class="c-name"><span class="elipse"></span> JPMorgan</p>
                </div>
                <div class="col-4">
                  <p class="s-date"><span class="elipse"></span>Wed, May 2<img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
              </div>
              <div class="row no-gutters c-shadow">
                <div class="col-4">
                  <p class="title-txt"> Thank you letter</p>
                </div>
                <div class="col-4">
                  <p class="c-name"><span class="elipse"></span> CBRE</p>
                </div>
                <div class="col-4">
                  <p class="s-date"><span class="elipse"></span> Wed, May 2 <img
                                            src="images/dots-line.svg" alt=""> </p>
                </div>
              </div>
              <div class="text-center mt-41"> <a href="#" class="btn-Links ">View all <img src="images/arrow-down.svg" alt=""></a> </div>
              <div class="text-right"> <a href="#" class="plus-more" data-toggle="modal" data-target="#reminder"><img
                                        src="images/plus.svg" alt=""></a> </div>
            </div>
          </div>
        </div>
        
        <!-- Modal -->
        <div class="modal fade" id="reminder" tabindex="-1" role="dialog" aria-labelledby="reminder"
                    aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h4><i class="fas fa-chevron-left"></i> Reminder <i class="fas fa-chevron-right"></i> </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true"><img src="images/close2.svg" alt=""></span> </button>
              </div>
              <div class="modal-body">
                <h3>Send Thank You Letter</h3>
                <div class="cc-text">
                  <p><span>To:</span>Scott Jansen</p>
                  <p><span>@</span>Merrill Lynch</p>
                </div>
                <div class="d-time"> <span>Due Date:</span>
                  <p>Wednesday, May 1st</p>
                </div>
                <div class="relative status">
                  <select name="" id="" class="form-control ">
                    <option value="">Status</option>
                  </select>
                  <i class="t-f r-0"><img src="images/select.svg" alt=""></i> </div>
                <div class="inner_modal">
                  <div class="media">
                    <h4>Completed Date</h4>
                    <div class="media-body">
                      <div class="input-group">
                        <input type="text" class="form-control" value="Today"
                                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append"> <i class="fas fa-calendar-alt"></i> </div>
                      </div>
                    </div>
                  </div>
                  <div class="media">
                    <h4>Email
                      Template</h4>
                    <div class="media-body">
                      <div class="relative">
                        <select name="" id="" class="form-control">
                          <option value="">Email Templates</option>
                        </select>
                        <i class="t-f"><img src="images/select2.svg" alt=""></i> </div>
                    </div>
                  </div>
                  <textarea name="" id="" cols="30" rows="10" class="form-control">Notes</textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</div>


{% endblock %}