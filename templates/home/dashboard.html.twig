{% extends 'base.html.twig' %}
{% block body %}

    <div>
        <div
            class="wrapper">
            <!-- Sidebar  -->
            <nav class="sidebar">
                <button class="btn close-btn sidebarCollapse">
                    <i class="fas fa-times"></i>
                </button>
                <div class="sidebar-header text-center">
                    <a href="/dashboard"><img alt="" src="{{ asset('images/logo.svg') }}"></a>
                </div>
                <ul class="list-unstyled components">
                    <li class="active">
                        <a href="dashboard">My Dashboard</a>
                    </li>
                    <li>
                        <a aria-expanded="false" data-toggle="collapse" href="#pageSubmenu">Job search</a>
                        <ul class="collapse list-unstyled " id="pageSubmenu">
                            <li>
                                <a href="/jobsitestosearch">Job Sites to Search</a>
                            </li>
                            <li>
                                <a href="/savedappliedjobs">Saved/Applied Jobs</a>
                            </li>
                            
                            <li>
                                <a href="/savedsearches">Saved Searches</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a aria-expanded="false" data-toggle="collapse" href="#pageSubmenu1">My Documents</a>
                        <ul class="collapse list-unstyled " id="pageSubmenu1">
                            <li>
                                <a href="/documents">Curriculum Vitae</a>
                            </li>
                            <li>
                                <a href="/coverletter">Cover Letter</a>
                            </li>
                            
                        </ul>
                    </li>
                    <li>
                        <a href="{{ path('mytask') }}">My Tasks</a>
                    </li>
                    <li>
                        <a href="/logout">LogOut</a>
                    </li>
                </ul>
            </nav>

            <!-- Page Content  -->
            <div class="content">
                <nav class="dashboard-nav navbar-expand-lg">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-info sidebarCollapse">
                                <i class="fas fa-bars"></i>
                            </button>
                            <ul class="sidetop ml-auto">
                                <li class="active">
                                    <a href="#">HELP</a>
                                </li>
                                <li>
                                    <a href="/accountinfo">SETTINGS</a>
                                </li>
                                <li>
                                    <div class="avtar"><img src="images/avatar.png" alt=""></div>

                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="over-wrapper">
                    <div class="container-fluid">
                        <ul class="dashboard-review">
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'all'}) }}">{{ alljobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>All Jobs</h3>
                            </li>
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'saved'}) }}">{{ savedjobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>Saved Jobs</h3>
                            </li>
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'applied'}) }}">{{ appliedjobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>Applied</h3>
                            </li>
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'follow up'}) }}">{{ followupjobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>Follow-up</h3>
                            </li>
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'interview'}) }}">{{ interviewjobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>Interviews</h3>
                            </li>
                            <li>
                                <div class="c1">
                                    <div class="counter">
                                        <a href="{{ path('savedappliedjobs', {'variable': 'post interview follow up'}) }}">{{ postinterviewjobscount }}</a>
                                    </div>
                                    <span class="img-dots">
                                        <img alt="" src="images/dots.svg">
                                    </span>
                                </div>
                                <h3>Post Interview Follow-up</h3>
                            </li>
                        </ul>
                    </div>


                    <!--Card Dashboard-->
                    <div class="container-fluid">
                        <div class="jb-main">
                            <div class=" fl1">
                                <div class="card-main card1">
                                    <div class="card_title">
                                        <h3>Saved/Applied Jobs</h3>
                                    </div>
                                    <div class="content-card row no-gutters">
                                        <div class="col-8 text-center">
                                            <h4><img alt="" src="images/task.svg">
                                                  &nbsp; &nbsp;Title/Company</h4>
                                        </div>
                                        
                                        <div class="col-4">
                                            <h4><img alt="" src="images/deadline.svg">   &nbsp;&nbsp;Saved/Applied</h4>
                                        </div>
                                    </div>
                                    {% for job in jobs| slice(0,3) %}
                                    <div class="row no-gutters c-shadow">
                                        
                                            <div class="col-8">
                                                <a href="{{ path('joblistingshow', { id: job.id }) }}"><p class="title-txt">
                                                {% if job.isSaved %} <span><i class="fas fa-heart" style="color: #80cbfd;"></i></span> {% elseif job.isApplied %} <span><i class="fas fa-check" style="color: #80cbfd;"></i></span> {% else %}<span></span>{% endif %}
                                                    {{ job.title }}</p>
                                                    <p class="c-name">{{ job.comapnyName}}</p></a>
                                            </div>
                                            
                                            <div class="col-4">
                                                <p class="s-date">
                                                    {{ job.dateSaved|date('d-m-Y') }}
                                                    
                                                </p>
                                            </div>
                                            <div align="center">
                                          
                                            </div>
                                            
                                        
                                        
                                    </div>
                                    {% endfor %}

                                
                                <div class="text-center mt-41">
                                    <a class="btn-Links " href="/savedappliedjobs">View all
                                        <img alt="" src="images/arrow-down.svg"></a>
                                </div>
                                <div class="text-right">
                                    <a class="plus-more" href="/savedappliedjobs"><img alt="" src="images/plus.svg"></a>
                                </div>
                            </div>
                        </div>
                        <div class=" fl2">
                            <div class="card2 card-main">
                                <div class="card_title">
                                    <h3>Tasks</h3>
                                </div>
                                <div class="content-card row no-gutters">

                                    <div class="col-8">
                                        <h4><img alt="" src="images/task.svg">
                                            Task/Company</h4>
                                    </div>
                    
                                    <div class="col-4">
                                        <h4><img alt="" src="images/deadline.svg">
                                            Due date</h4>
                                    </div>

                                </div>
                                 {% for task in tasks| slice(0,3) %}
                                <div class="row no-gutters c-shadow">
                                   
                                        <div class="col-8">
                                            <p class="title-txt">{{ task.name }}</p>

                                               <p class="title-txt"> {{ task.fromName }}</p>
                                            
                                        </div>
                                        
                                        <div class="col-4">
                                            <p class="s-date">
                                                
                                                {{ task.dueDate|date('d-m-Y') }}
                                            </p>
                                        </div>
                                        <div align="center">
                                            </div>
                                    

                                </div>
                                {% endfor %}
                                <div class="text-center mt-41">
                                    <a class="btn-Links " href="{{ path('mytask') }}">View all
                                        <img alt="" src="images/arrow-down.svg"></a>
                                </div>
                                <div class="text-right">
                                    <a class="plus-more" href="{{ path('mytask') }}"><img alt="" src="images/plus.svg"></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div aria-hidden="true" aria-labelledby="reminder" class="modal fade" id="reminder" role="dialog" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4>
                                        <i class="fas fa-chevron-left"></i>
                                        Reminder
                                        <i class="fas fa-chevron-right"></i>
                                    </h4>
                                    <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                                        <span aria-hidden="true"><img alt="" src="images/close2.svg"></span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <h3>Send Thank You Letter</h3>
                                    <div class="cc-text">
                                        <p>
                                            <span>To:</span>Scott Jansen</p>
                                        <p>
                                            <span>@</span>Merrill Lynch</p>
                                    </div>
                                    <div class="d-time">
                                        <span>Due Date:</span>
                                        <p>Wednesday, May 1st</p>
                                    </div>
                                    <div class="relative status">
                                        <select class="form-control " id="" name="">
                                            <option value="">Status</option>
                                        </select>
                                        <i class="t-f r-0"><img alt="" src="images/select.svg"></i>
                                    </div>
                                    <div class="inner_modal">
                                        <div class="media">
                                            <h4>Completed Date</h4>
                                            <div class="media-body">
                                                <div class="input-group">
                                                    <input aria-describedby="basic-addon2" aria-label="Recipient's username" class="form-control" type="text" value="Today">
                                                    <div class="input-group-append">
                                                        <i class="fas fa-calendar-alt"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="media">
                                            <h4>Email
                                                                      Template</h4>
                                            <div class="media-body">
                                                <div class="relative">
                                                    <select class="form-control" id="" name="">
                                                        <option value="">Email Templates</option>
                                                    </select>
                                                    <i class="t-f"><img alt="" src="images/select2.svg"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <textarea class="form-control" cols="30" id="" name="" rows="10">Notes</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" data-dismiss="modal" type="button">Cancel</button>
                                    <button class="btn btn-primary" type="button">Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
