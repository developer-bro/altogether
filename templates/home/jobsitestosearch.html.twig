                    </li>
                    <li>
                        <a href="/logout">LogOut</a>
                    </li>
                </ul>
            </nav>

            <!-- Page Content  -->
            <div class="content">
                <nav class="dashboard-nav navbar-expand-lg">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-info sidebarCollapse">
                                <i class="fas fa-bars"></i>
                            </button>
                            <ul class="sidetop ml-auto">
                                <li class="active">
                                    <a href="#">HELP</a>
                                </li>
                                <li>
                                    <a href="/accountinfo">SETTINGS</a>
                                </li>
                                <li>
                                  <div class="avtar"><img src="{{ asset('images/avatar.png') }}" alt=""></div>

                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <ul class="links_search">
                    <li class="active">
                        <a href="/jobsitestosearch">Job Sites to Search</a>
                    </li>
                    <li>
                        <a href="/savedappliedjobs">Saved/Applied Jobs</a>
                    </li>
                    
                    <li>
                        <a href="/savedsearches">Saved Searches</a>
                    </li>
                </ul>
                <form action="" class="search_form">
                    <div class="form-row">
                        <div class="form-group col-md-7 firstinput">
                            <div class="keyword-input">
                                <label for="">Job description</label>
                                <div class="relative">
                                    <input class="form-control" id="jobName" value="{{ search.jobName }}" placeholder="Job title, keywords" type="text" required autofocus>
                                    <i class="search-icon">
                                        <img alt="" src="{{ asset('images/search.svg') }}"></i>
                                </div>
                            </div>
                        </div>
                         
                        <div class="form-group col-md-5 secondinput">
                            <div class="des-input ml-auto">
                                <label for="">Location</label>
                                <div class="relative">
                                    <input class="form-control" id="locationName" value="{{ search.location }}" placeholder="City, state or ZIP code" type="text" required>
                                    <i class="search-icon"><img alt="" src="{{ asset('images/maps-and-flags.svg') }}"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-search" id="sub" type="submit">Run Search
                            &nbsp;<img alt="" src="{{ asset('images/search2.svg') }}">
                        </button>
                    </div>
                </form>


                <br>
                <br>

                <p class="text-center">Be sure to allow pop-ups</p>

                <br>
                <br>

                <div class="serch-wrapper">
                <div class="row">
                <div class="col-6">
                    <div class="media">
                        <div class="check">
                            <input checked="" class="checkbox-style" id="checkbox-1" name="checkbox-10" type="checkbox">
                            <label class="checkbox-style-3-label" for="checkbox-1">
                                <img alt="" src="{{ asset('images/linkedin.svg') }}">
                                <span>LinkedIn</span>
                            </label>
                        </div>

                        </div>
                        
                        
                    </div>
                     <div class="col-6">
                    <div class="media">
                        <div class="check">
                            <input class="checkbox-style" id="checkbox-2" name="checkbox-10" type="checkbox">
                            <label class="checkbox-style-3-label" for="checkbox-2">
                                <img alt="" src="{{ asset('images/indeed.svg') }}">
                                <span>Indeed</span>
                            </label>
                        </div>
                        
                    </div>
                    </div>

                     <div class="col-6">
                    <div class="media">
                        <div class="check">
                            <input class="checkbox-style" id="checkbox-3" name="checkbox-10" type="checkbox">
                            <label class="checkbox-style-3-label" for="checkbox-3">
                                <img alt="" src="{{ asset('images/monster.svg') }}">
                                <span>Monster</span>
                            </label>
                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script crossorigin="anonymous" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script crossorigin="anonymous" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        $("#sub").click("submit", function (e) {

            e.preventDefault();
            var jobName = $("#jobName").val();
            var locationName = $("#locationName").val();
            var email = [jobName, locationName];

            console.log(email);
            if (document.getElementById('checkbox-1').checked && document.getElementById('checkbox-2').checked && document.getElementById('checkbox-3').checked) {

                window.open("https://www.linkedin.com/jobs/search?keywords=" + jobName + "&location=" + locationName);
                window.open("https://www.indeed.com/jobs?q=" + jobName + "&l=" + locationName);
                window.open("https://www.monster.com/jobs/search/?q=" + jobName + "&where=" + locationName);


            } else if (document.getElementById('checkbox-1').checked && document.getElementById('checkbox-2').checked) {
                window.open("https://www.linkedin.com/jobs/search?keywords=" + jobName + "&location=" + locationName);
                window.open("https://www.indeed.com/jobs?q=" + jobName + "&l=" + locationName);

            } else if (document.getElementById('checkbox-1').checked && document.getElementById('checkbox-3').checked) {
                window.open("https://www.linkedin.com/jobs/search?keywords=" + jobName + "&location=" + locationName);
                window.open("https://www.monster.com/jobs/search/?q=" + jobName + "&where=" + locationName);

            } else if (document.getElementById('checkbox-2').checked && document.getElementById('checkbox-3').checked) {
                window.open("https://www.indeed.com/jobs?q=" + jobName + "&l=" + locationName);
                window.open("https://www.monster.com/jobs/search/?q=" + jobName + "&where=" + locationName);

            } else if (document.getElementById('checkbox-2').checked) {

                window.open("https://www.indeed.com/jobs?q=" + jobName + "&l=" + locationName);
            } else if (document.getElementById('checkbox-3').checked) {
                window.open("https://www.monster.com/jobs/search/?q=" + jobName + "&where=" + locationName);

            } else {
                window.open("https://www.linkedin.com/jobs/search?keywords=" + jobName + "&location=" + locationName);

            }


            e.preventDefault();
            var jobName = $("#jobName").val();
            var locationName = $("#locationName").val();
            var email = [jobName, locationName];

            console.log(email);


            $.ajax({
                url: "{{ path('savedjobsearches') }}",
                type: 'POST',
                data: {
                    email: email
                },
                success: function (res) {}
            });


        });
    </script>

    

{% endblock %}
