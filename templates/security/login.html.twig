{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="login-sec">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-login">
                    <div class="head-login text-center"><img alt="" src="images/logo.svg"></div>


                    <form method="post" class="login-form">
                       

                        <h3>Sign in with your email</h3>
                        <div class="input-grops">

                            <div class="position-relative form-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                                <img alt="" src="images/email.svg">
                            </div>

                            <div class="position-relative form-group">
                               <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                                <img alt="" src="images/password.svg">
                            </div>
                             <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
                        

                        <a class="forget-btn" href="/passwordrequest ">Forgot password?</a>
                        {% if error %}
    <div style="background-color: red; color:white;" align="center" >{{ error.messageKey|trans(error.messageData, 'security') }} </div>
{% endif %}
<br>
                        <button type="submit" id="_submit" name="_submit" class="sigin-btn">
        Sign in
    </button>
                    </div>
                    <div class="linkedin-box">
                        <span>OR</span>
                        <a class="linkdin-box" href="">
                            <img alt="" src="images/linkdin.svg">
                            Sign in with LinkedIn
                        </a>
                    </div>
                    <ul class="creat-items">
                        <li>
                            <a href="#">New to Altogethr?</a>
                        </li>
                        <li>
                            <a href="/register">Create an account</a>
                        </li>
                    </ul>
                </form>

            </div>
        </div>
    </div>
</div></section>


{% endblock %}
